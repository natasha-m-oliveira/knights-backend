generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Attribute {
  strength
  dexterity
  constitution
  intelligence
  wisdom
  charisma
}

type Weapon {
  name     String
  mod      Int
  attr     Attribute
  equipped Boolean
}

type Attributes {
  strength     Int
  dexterity    Int
  constitution Int
  intelligence Int
  wisdom       Int
  charisma     Int
}

model Knight {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  nickname     String     @unique
  birthday     DateTime
  weapons      Weapon[]
  attributes   Attributes
  keyAttribute Attribute

  @@map("knights")
}

model Legacy {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  knightId     String
  name         String
  nickname     String     @unique
  birthday     DateTime
  weapons      Weapon[]
  attributes   Attributes
  keyAttribute Attribute
  deletedAt    DateTime   @default(now())

  @@map("legacies")
}
